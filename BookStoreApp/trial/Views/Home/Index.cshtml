
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    @* Bootstrap *@
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap.min.css" />
    @* load angularjs library & lodash js *@
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.0/angular.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    @* StyleSheet For Dividing The Screen Into 3 Panels *@
    <link href="~/Content/pane1.css" rel="stylesheet" />
    @* StyleSheet For React Code *@
    <link href="~/Content/StyleSheet4.css" rel="stylesheet" />
    @* StyleSheet for angular code *@
    <link href="~/Content/StyleSheetAngular.css" rel="stylesheet" />
    @*Script to suppress alerts*@
    <script>window.alert = function () { }</script>
</head>
<body>
    <div class="content">
        <h1 class="title"><span>[React]</span></h1>
        <div class="container">
            @* Left Pane *@
            <div id="left_pane">
                <div ng-app="MyApp" ng-controller="multiselectdropdown">
                    <div class="container" style="margin:50px">
                        <form class="form-inline" name="myForm" role="form" ng-submit="SubmitData()">
                            <div class="form-group">
                                <label>Categories : </label><br><br>
                                @* Directive *@
                                <div ng-dropdown-multiselect="" extra-settings="dropdownSetting"
                                     options="Categories" selected-model="CategoriesSelected" checkboxes="true"></div>
                            </div><br><br>
                            <button type="submit" class="btn btn-primary" id="MyButton" onClick="window.location.href=window.location.href">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
            @* Middle pane and right pane ,react *@
            <div id="middle_pane">
                <div class="list-select"></div>
            </div>
        </div>
    </div>
    @* Loading React and jquery *@
    <script src='http://cdnjs.cloudflare.com/ajax/libs/react/0.13.0/react.min.js'></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    @* Loading React Code *@
    <script src="~/Scripts/reactscript.js"></script>
    @* Loading angular code *@
    <script src="~/Scripts/MyApp.js"></script>
    @* Multiselect drop down libray for angular code *@
    <script src="~/Scripts/angularjs-dropdown-multiselect.js"></script>
</body>
</html>
